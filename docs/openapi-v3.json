          },
          "include_logo": {
            "type": "boolean",
            "example": true
          },
          "logo_color": {
            "type": "string",
            "example": "#FF5733"
          },
          "logo_shape": {
            "type": "string",
            "example": "circle"
          },
          "module_shape": {
            "type": "string",
            "example": "square"
          },
          "size": {
            "type": "integer",
            "example": 512
          },
          "transparent_background": {
            "type": "boolean",
            "example": false
          }
        }
      }
    }
  }
